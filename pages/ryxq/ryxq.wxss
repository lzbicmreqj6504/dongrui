.container {
    position: relative;
    padding-bottom: 100rpx;
    background: #fff;
  }
  .data_lis{
    width: 100%;
    display: flex;
    height: 250rpx;
    justify-content: space-between;
    border-bottom: 1px solid #ccc;

}
.lis_left{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-weight: bold;
    padding-left: 30rpx;
}
.lis_right{
    width: 40%;
    height: 100%;
    border: 1px solid #ccc;
    text-align: center;
}
.lis_right image{
    width:250rpx;
    height: 250rpx;
}
.bot_lis{
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #ccc;
    padding-left: 20rpx;
    padding-right: 20rpx;
    align-items: center;
}
.box{
    width: 90%;
    height: 250rpx;
    margin: 10rpx auto;
    padding:20rpx;
    border:1rpx solid #ccc;
}