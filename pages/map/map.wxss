/**index.wxss**/
.container {
  position: relative;
  padding-bottom: 100rpx;
}
.chart-container {
  width: 95%;
  height: 70vh;
  position: relative;
}
.container-left{
  position: absolute;
  left: -200%;
  top: 0;
}
page {
  background-color: #eeeeee;
}
.tool-tip {
  position: absolute;
  top: 200rpx;
  left: 200rpx;
  z-index: 9999;
  background-color: rgba(0, 0, 0, .7);
  padding: 10rpx 15px;
  color: #ffffff;
  border-radius: 10rpx;
  overflow: initial;
}
.tool-detail {
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
}
.nofont {
  display: inline-block;
	width: 6rpx;
	height: 26rpx;
}
.arrow {
  width: 32rpx;
  height: 32rpx;
}
.tool-back {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
}
.tool-back button {
  padding: 8rpx 25rpx;
  line-height: 50rpx;
  font-size: 36rpx;
}
